<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <Button
        android:id="@+id/btn_reg"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:padding="3dp"
        android:text="Next"
        android:onClick="next"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@+id/et_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp" />

    <EditText
        android:id="@+id/et_number"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="Mobile number"
        android:inputType="phone"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="16sp"
        android:layout_below="@+id/confirmPassword"
        android:layout_alignLeft="@+id/confirmPassword"
        android:layout_alignStart="@+id/confirmPassword" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="16sp"
        android:layout_below="@+id/et_lname"
        android:layout_alignLeft="@+id/et_lname"
        android:layout_alignStart="@+id/et_lname" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="16sp"
        android:layout_below="@+id/et_password"
        android:layout_alignLeft="@+id/et_password"
        android:layout_alignStart="@+id/et_password" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="Username"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="16sp"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="16sp"
        android:layout_below="@+id/et_username"
        android:layout_alignLeft="@+id/et_username"
        android:layout_alignStart="@+id/et_username" />

    <EditText
        android:id="@+id/et_fname"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="First Name"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="16sp"

        android:layout_below="@+id/et_email"
        android:layout_alignLeft="@+id/et_email"
        android:layout_alignStart="@+id/et_email" />


    <EditText
        android:id="@+id/et_lname"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="Last Name"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="16sp"
        android:layout_below="@+id/et_fname"
        android:layout_alignLeft="@+id/et_fname"
        android:layout_alignStart="@+id/et_fname" />

    <EditText
        android:id="@+id/et_address"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="Hospital Address"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="16sp"
        android:layout_below="@+id/et_number"
        android:layout_alignLeft="@+id/et_number"
        android:layout_alignStart="@+id/et_number" />





</RelativeLayout>
